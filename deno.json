{
  "name": "@jjg/img2mcstructure",
  "version": "1.2.6",
  "description": "Convert images and 3D models into Minecraft Bedrock structures and related formats.",
  "license": "GPL-3.0-only",
  "exports": "./mod.ts",
  "fmt": {
    "include": [
      "./app",
      "./src",
      "./*.ts",
      "./*.tsx",
      "./example",
      "./db"
    ],
    "exclude": [
      "./static",
      "./dist",
      "./build",
      "./cache",
      "./node_modules",
      "./tests"
    ]
  },
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns"
    ]
  },
  "imports": {
    "@hono/hono": "jsr:@hono/hono@^4.4.11",
    "imagescript": "npm:imagescript@1.3.0",
    "jszip": "npm:jszip@3.10.1",
    "nanoid": "npm:nanoid@5.0.7",
    "nbtify": "npm:nbtify@1.90.1",
    "classix": "npm:classix@^2.1.38",
    "vox-reader": "npm:vox-reader@2.1.2"
  },
  "publish": {
    "exclude": [
      "./db/*",
      "./example/*",
      "./public/*",
      "./static/*",
      "./tests/*",
      "./server.ts",
      "./main.ts",
      "./deno.lock"
    ],
    "include": [
      "./README.md",
      "./LICENSE",
      "./src/**/*",
      "./mod.ts"
    ]
  },
  "deploy": {
    "project": "4cdbec4d-9050-468c-9ec4-a26f559995f3",
    "exclude": [
      "./cache",
      "./build",
      "*.mcstructure",
      "**/node_modules",
      "./example",
      "./bds"
    ],
    "include": [
      "./dist",
      "./db",
      "./src",
      "./main.ts"
    ],
    "entrypoint": "main.ts"
  }
}